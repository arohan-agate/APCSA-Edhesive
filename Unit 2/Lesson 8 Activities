/* Lesson 8 Coding Activity Question 2 */

import java.util.Scanner;

public class U2_L8_Activity_Two{
  public static void main(String[] args){
  
    Scanner input = new Scanner(System.in);
    double side1, side2, hypotenuse;
    System.out.println("Enter distance east:");
    side1 = input.nextDouble();
    System.out.println("Enter distance north:");
    side2 = input.nextDouble();
    hypotenuse = Math.sqrt(Math.pow(side1, 2) + Math.pow(side2, 2));

    System.out.println("Distance between points: " + hypotenuse);
  
  }
}


/* Lesson 8 Coding Activity Question 3 */

import java.util.Scanner;

public class U2_L8_Activity_Three{
  public static void main(String[] args){
  
    Scanner scan = new Scanner(System.in);
    System.out.println("Enter two integers:");
    Integer num1 = scan.nextInt();
    Integer num2 = scan.nextInt();
    System.out.printf("Difference: %d%n", Math.abs(num1 - num2));
  }
}
